<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tres en raya"
        android:textSize="42dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.128"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.045"></TextView>

    <Button
        android:id="@+id/btn_unJugador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="1 Jugador"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView"></Button>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_unJugador"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintStart_toStartOf="@+id/btn_unJugador"
        app:layout_constraintTop_toBottomOf="@+id/btn_unJugador">

        <RadioButton
            android:id="@+id/btn_facil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Facil"></RadioButton>

        <RadioButton
            android:id="@+id/btn_medio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medio"></RadioButton>

        <RadioButton
            android:id="@+id/btn_dificil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dificil"></RadioButton>
    </RadioGroup>

    <Button
        android:id="@+id/btn_dosJugadores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="2 Jugador"
        app:layout_constraintEnd_toEndOf="@+id/radioGroup"
        app:layout_constraintStart_toStartOf="@+id/radioGroup"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"></Button>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/radioGroup"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/a1"
            style="@style/casillas"></ImageView>

        <ImageView
            android:id="@+id/a2"
            style="@style/casillas"></ImageView>

        <ImageView
            android:id="@+id/a3"
            style="@style/casillas"></ImageView>

        <ImageView
            android:id="@+id/a4"
            style="@style/casillas"></ImageView>

        <ImageView
            android:id="@+id/a5"
            style="@style/casillas"></ImageView>

        <ImageView
            android:id="@+id/a6"
            style="@style/casillas"></ImageView>

        <ImageView
            android:id="@+id/a7"
            style="@style/casillas"></ImageView>

        <ImageView
            android:id="@+id/a8"
            style="@style/casillas"></ImageView>

        <ImageView
            android:id="@+id/a9"
            style="@style/casillas"></ImageView>
    </GridLayout>

    <TextView
        android:id="@+id/txt_ganador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ganador"
        android:textSize="42dp"
        app:layout_constraintEnd_toEndOf="@+id/gridLayout"
        app:layout_constraintHorizontal_bias="0.431"
        app:layout_constraintStart_toStartOf="@+id/gridLayout"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout"></TextView>

    <Button
        android:id="@+id/btn_reiniciar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Reiniciar"
        app:layout_constraintEnd_toEndOf="@+id/btn_dosJugadores"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_dosJugadores"
        app:layout_constraintTop_toBottomOf="@+id/btn_dosJugadores"></Button>
</androidx.constraintlayout.widget.ConstraintLayout>